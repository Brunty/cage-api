{
    "name": "slim/slim-skeleton",
    "description": "A Slim Framework skeleton application for rapid development",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "license": "MIT",
    "require": {
        "php": ">=7.0",
        "slim/slim": "^3.1",
        "monolog/monolog": "^1.17",
        "aura/accept": "^2.2",
        "shrikeh/teapot": "^2.2",
        "league/event": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "brunty/api-testcase": "^1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "App\\": "src/"
        }
    },
	"scripts": {
        "start": "php -S 0.0.0.0:8080 -t public public/index.php",
        "test": "phpunit",
        "compile": [
            "cp var/storage/cages.stub.json var/storage/cages.json"
        ]
	}

}
