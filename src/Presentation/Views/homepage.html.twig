{% extends 'Layouts/main.html.twig' %}

{% block content %}
    <div class="col-sm-12">
        <h1>CAGE ME!</h1>
        <p>List of methods you can use in this API:</p>
        <table>
            <thead>
            <tr>
                <th>Method</th>
                <th>URL</th>
                <th>Parameters</th>
                <th>Content Type</th>
                <th>Notes / Description</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>GET</td>
                <td>/random</td>
                <td>n/a</td>
                <td><code>appliation/json</code><br /><code>appliation/xml</code></td>
                <td>Returns a single random picture of our One True God.</td>
            </tr>
            <tr>
                <td>GET</td>
                <td>/bomb/{number?}</td>
                <td>n/a</td>
                <td><code>appliation/json</code><br /><code>appliation/xml</code></td>
                <td>Returns a(n) (optional) {number} of random cages (default if no number specified is 5), up to a maximum of {{ constant('\\App\\Domain\\Repository\\CageRepository::MAX_BOMB_CAGES') }}.</td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
